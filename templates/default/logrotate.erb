<%= @path.join(" ") %> {
  <%= @frequency %>
  missingok
  rotate <%= @rotate %>
  compress
  delaycompress
  notifempty
  create <%= @create %>
  sharedscripts
  postrotate
    # Ideally we send nginx the "reopen" signal so a full reload isn't
    # necessary. But this doesn't properly rotate Pasenger's Rails log files,
    # so we'll do a "reload" instead.
    <%= node[:nginx][:src_binary] %> -s reload
  endscript
}
