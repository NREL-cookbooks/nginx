server {
  listen <%= node[:nginx][:default_site][:port] %> default_server;

  access_log <%= node[:nginx][:log_dir] %>/localhost.access.log;

  location / {
    root /var/www/nginx-default;
    index index.html index.htm;
  }

  <% if node[:nginx][:default_site][:status][:enabled] %>
  location /nginx_status {
    stub_status on;
    access_log off;
    allow <%= node[:nginx][:default_site][:status][:allow] %>;
    deny <%= node[:nginx][:default_site][:status][:deny] %>;
  }
  <% end %>
}
